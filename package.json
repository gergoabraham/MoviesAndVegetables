{
  "name": "movies-and-vegetables",
  "version": "0.2.0",
  "scripts": {
    "firefox": "web-ext -s src run",
    "eslint": "eslint --ignore-path .gitignore .",
    "webext-lint": "web-ext -s src lint",
    "unit-test": "mocha --forbid-only test/unit/",
    "tdd": "mocha --watch test/unit/",
    "end-to-end-test": "PATH %PATH%;node_modules/geckodriver/&& mocha test/end-to-end --timeout 120000",
    "test": "npm run eslint && npm run webext-lint && npm run unit-test && npm run coverage",
    "coverage": "nyc --reporter=lcov --reporter=text-summary --reporter=text --all mocha test/unit/ --timeout 60000",
    "coverageCI": "npm run coverage && codecov",
    "fix-eslint": "eslint --ignore-path .gitignore . --fix",
    "build": "web-ext -s src build -i icons/icon.psd"
  },
  "author": "gergooo <abrahamgergo@gmail.com>",
  "license": "no license",
  "devDependencies": {
    "@types/selenium-webdriver": "^4.0.9",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.7.0",
    "eslint": "^7.4.0",
    "eslint-config-google": "^0.14.0",
    "geckodriver": "^1.19.1",
    "jsdom": "^16.3.0",
    "mocha": "^8.0.1",
    "node-cmd": "^3.0.0",
    "nyc": "^15.1.0",
    "selenium-webdriver": "^4.0.0-alpha.7",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "web-ext": "^4.3.0"
  },
  "mocha": {
    "recursive": true,
    "file": "./test/setup.js"
  }
}