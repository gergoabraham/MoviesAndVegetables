{
  "name": "movies-and-vegetables",
  "version": "0.2.0",
  "scripts": {
    "dev:tdd:unit": "mocha --watch test/unit/",
    "dev:tdd:html-contracts": "mocha test/html-contracts --watch --timeout 5000",
    "dev:firefox": "web-ext -s src run",
    "dev:coverage": "nyc --reporter=lcov --all mocha -R=progress --forbid-only test/unit/ && start coverage/lcov-report/index.html",
    "lint:eslint": "eslint --ignore-path .gitignore .",
    "lint:eslint:fix": "eslint --ignore-path .gitignore . --fix",
    "lint:webext": "web-ext -s src lint",
    "test": "echo ### COMMIT SUITE ### && npm-run-all --aggregate-output -p lint:* test:*",
    "test:end-to-end": "mocha test/end-to-end --timeout 120000 --color",
    "test:html-contracts": "mocha test/html-contracts -R=progress --forbid-only --color --timeout 5000",
    "test:unit": "nyc --reporter=text-summary --all --check-coverage mocha -R=progress --forbid-only --color test/unit/",
    "ci:unit-test": "nyc --reporter=lcov --all mocha --forbid-only test/unit/ && codecov",
    "build": "web-ext -s src build -i icons/icon.psd"
  },
  "author": "gergooo <abrahamgergo@gmail.com>",
  "license": "no license",
  "devDependencies": {
    "@types/selenium-webdriver": "^4.0.9",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.7.0",
    "eslint": "^7.4.0",
    "eslint-config-google": "^0.14.0",
    "geckodriver": "^1.19.1",
    "jsdom": "^16.3.0",
    "mocha": "^8.0.1",
    "node-cmd": "^3.0.0",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "selenium-webdriver": "^4.0.0-alpha.7",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "web-ext": "^4.3.0"
  },
  "mocha": {
    "recursive": true,
    "file": "./test/setup.js"
  }
}
