{
  "name": "movies-and-vegetables",
  "version": "0.1.1",
  "scripts": {
    "firefox": "web-ext -s src run",
    "eslint": "eslint --ignore-path .gitignore .",
    "webext-lint": "web-ext -s src lint",
    "unit-test": "mocha --forbid-only",
    "tdd": "mocha --watch",
    "test": "npm run eslint && npm run webext-lint && npm run unit-test && npm run coverage",
    "coverage": "nyc --reporter=lcov --reporter=text-summary --reporter=text --all mocha --timeout 60000",
    "coverageCI": "npm run coverage && codecov",
    "fix-eslint": "eslint --ignore-path .gitignore . --fix",
    "build": "web-ext -s src build -i icons/icon.psd"
  },
  "author": "gergooo <abrahamgergo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.5.0",
    "eslint": "^6.0.1",
    "eslint-config-google": "^0.13.0",
    "jsdom": "^15.1.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "web-ext": "^3.1.0"
  },
  "mocha": {
    "file": "./test/setup.js"
  }
}
