{
  "env": {
    "browser": true,
    "node": true,
    "webextensions": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "strict": ["error", "global"],
    "prefer-const": "error",
    "no-var": "error",
    "no-use-before-define": ["error", { "functions": false }],
    "require-jsdoc": "off",
    "no-unexpected-multiline": "off"
  },
  "globals": {
    "exportToTestEnvironment": "readonly",
    "MoviePageFactory": "writable",
    "ImdbPage": "writable",
    "RottenPage": "writable",
    "Ratings": "writable",
    "MoviePage": "writable",
    "MovieInfo": "writable",
    "Movie": "writable",
    "ContentScript": "writable",
    "Logger": "writable"
  }
}
